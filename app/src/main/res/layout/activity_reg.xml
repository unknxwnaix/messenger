<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a2d2ff"
    tools:context=".RegActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:text="РЕГИСТРАЦИЯ СОТРУДНИКА"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textSize="24pt"/>

    <ImageView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:id="@+id/image_Auth"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/imageauth"
        />

    <EditText
        android:id="@+id/surname_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/image_Auth"
        android:drawableStart="@drawable/person"
        android:hint="Фамилия"
        android:textSize="14pt"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/edit_text"
        android:layout_margin="20dp"/>

    <EditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/surname_input"
        android:drawableStart="@drawable/person"
        android:hint="Имя"
        android:textSize="14pt"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/edit_text"
        android:layout_margin="20dp"/>

    <EditText
        android:id="@+id/username_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/name_input"
        android:drawableStart="@drawable/person"
        android:hint="Никнейм"
        android:textSize="14pt"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/edit_text"
        android:layout_margin="20dp"/>

    <EditText
        android:id="@+id/login_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/username_input"
        android:drawableStart="@drawable/emailm"
        android:hint="Почта"
        android:textSize="14pt"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/edit_text"
        android:layout_margin="20dp"/>


    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/login_input"
        android:hint="Пароль"
        android:textSize="14pt"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:drawableStart="@drawable/password"
        android:drawablePadding="5dp"
        app:flow_verticalAlign="center"
        android:background="@drawable/edit_text"
        android:layout_margin="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_input"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="15dp"
        android:background="@drawable/exit_btn"
        android:padding="5dp"
        android:textSize="10pt"
        android:textColor="#FFFF"
        android:text="Зарегистрироваться"/>


</androidx.constraintlayout.widget.ConstraintLayout>